<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.pikefin.businessobjects.EntityGroup" table="entity_groups" dynamic-update="true">
		<id name="entityGroupId" column="id" type="integer">
			<generator class="identity"/>
		</id>
	 <property name="name" type="string">
            <column name="name" length="40" not-null="true" />
        </property>
        <property name="type" type="string">
            <column name="type" length="1">
                <comment>d - display, c - collect, b - both, e - equity index group</comment>
            </column>
        </property>
        <property name="description" type="string">
            <column name="description" length="100" />
        </property>
        <property name="parentId" type="java.lang.Integer">
            <column name="parent_id" />
        </property>
        <property name="lft" type="java.lang.Integer">
            <column name="lft" />
        </property>
        <property name="rght" type="java.lang.Integer">
            <column name="rght" />
        </property>
		<set name="entities" table="entities_entity_groups" cascade="all">
			<key column="entity_group_id" />
			<many-to-many column="entity_id"
				class="com.pikefin.businessobjects.Entity" />	
		</set>
   </class>
   
 
</hibernate-mapping>
